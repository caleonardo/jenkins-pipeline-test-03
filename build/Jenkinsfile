pipeline {
  agent {
      label "gce-agent"
  }
  stages {
    stage('TF init') {
      steps {
          sh '''
          cd build
          ./tf-wrapper.sh init $BRANCH_NAME
          '''
      }
    }
    stage('TF plan') {
      steps {
          sh '''
          cd build
          ./tf-wrapper.sh plan $BRANCH_NAME
          '''
        }
    }
    stage('TF validate') {
      steps {
          sh '''
          echo "BRANCH_NAME POLICY_REPO"
          echo "$BRANCH_NAME $POLICY_REPO"
          echo $BRANCH_NAME $POLICY_REPO
          cd build
          ./tf-wrapper.sh validate $BRANCH_NAME $POLICY_REPO
          '''
        }
    }
    stage('TF apply') {
      steps {
          sh '''
          cd build
          ./tf-wrapper.sh apply $BRANCH_NAME
          '''
        }
    }
  }
}
